<div class="container mt-4">
  <!-- Plan Details Card -->
  <div class="card shadow-lg">
    <div class="card-header bg-primary text-white">
      <h1 class="card-title mb-0 text-center"><%= @plan.name %></h1>
    </div>
    <div class="card-body">
      <p><strong>Description:</strong></p>
      <p class="text-muted"><%= @plan.description %></p>
      <hr>
      <p><strong>Start Time:</strong> <span class="text-primary"><%= @plan.start_time.strftime('%Y-%m-%d %H:%M') %></span></p>
      <p><strong>End Time:</strong> <span class="text-danger"><%= @plan.end_time.strftime('%Y-%m-%d %H:%M') %></span></p>
    </div>
  </div>

  <!-- Action Buttons -->
  <div class="mt-3 d-flex justify-content-between">
    <%= link_to 'Edit', edit_plan_path(@plan), class: 'btn btn-warning shadow-sm' %>
    <%= link_to 'Delete', plan_path(@plan), method: :delete, data: { confirm: 'Are you sure to delete?' }, class: 'btn btn-danger shadow-sm' %>
    <%= link_to 'Back', plans_path, class: 'btn btn-secondary shadow-sm' %>
  </div>
</div>
