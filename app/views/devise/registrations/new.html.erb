<div class="row justify-content-center animate-fade">
  <div class="col-md-6">
    <h1 class="text-center mb-4 text-white fw-bold">Sign Up</h1>

    <!-- error mention -->
    <% if resource.errors.any? %>
      <div class="alert alert-danger shadow-sm animate-bounce" role="alert">
        <ul class="mb-0">
          <% resource.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!-- sign up -->
    <div class="card shadow-lg border-dark animate-slide-in">
      <div class="card-body">
        <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true, class: 'form' do |f| %>
          <div class="mb-3">
            <%= f.label :email, "Email", class: "form-label fw-bold text-dark" %>
            <%= f.email_field :email, autofocus: true, class: "form-control border-dark shadow-sm", placeholder: "Enter your email" %>
          </div>

          <div class="mb-3">
            <%= f.label :password, "Password", class: "form-label fw-bold text-dark" %>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control border-dark shadow-sm", placeholder: "Create a password" %>
          </div>

          <div class="mb-3">
            <%= f.label :password_confirmation, "Confirm Password", class: "form-label fw-bold text-dark" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control border-dark shadow-sm", placeholder: "Confirm your password" %>
          </div>

          <%= f.submit "Sign Up", class: "btn btn-dark w-100 shadow-sm btn-lg" %>
        <% end %>
      </div>
    </div>

    <!-- 登录链接 -->
    <div class="text-center mt-3">
      <%= link_to "Login", new_user_session_path, class: "text-decoration-none text-white fw-bold" %>
    </div>
  </div>
</div>
