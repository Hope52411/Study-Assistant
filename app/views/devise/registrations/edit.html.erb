<div class="row justify-content-center animate-fade">
  <div class="col-md-6">
    <h2 class="text-center mb-4 text-dark fw-bold">Edit <%= resource_name.to_s.humanize %></h2>

    <!-- error mention -->
    <%= render "devise/shared/error_messages", resource: resource %>

    <!-- edit page -->
    <div class="card shadow-lg border-dark animate-slide-in">
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, class: "form") do |f| %>
          <!-- Email -->
          <div class="mb-3">
            <%= f.label :email, "Email", class: "form-label fw-bold text-dark" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control border-dark shadow-sm", placeholder: "Enter your email" %>
          </div>

          <!-- Pending confirmation -->
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div class="alert alert-warning shadow-sm" role="alert">
              Currently waiting confirmation for: <strong><%= resource.unconfirmed_email %></strong>
            </div>
          <% end %>

          <!-- Password -->
          <div class="mb-3">
            <%= f.label :password, "New Password", class: "form-label fw-bold text-dark" %>
            <small class="text-muted">(leave blank if you don't want to change it)</small>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control border-dark shadow-sm", placeholder: "Enter a new password" %>
            <% if @minimum_password_length %>
              <small class="text-muted"><%= @minimum_password_length %> characters minimum</small>
            <% end %>
          </div>

          <!-- Password confirmation -->
          <div class="mb-3">
            <%= f.label :password_confirmation, "Confirm New Password", class: "form-label fw-bold text-dark" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control border-dark shadow-sm", placeholder: "Confirm your new password" %>
          </div>

          <!-- Current password -->
          <div class="mb-3">
            <%= f.label :current_password, "Current Password", class: "form-label fw-bold text-dark" %>
            <small class="text-muted">(we need your current password to confirm your changes)</small>
            <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control border-dark shadow-sm", placeholder: "Enter your current password" %>
          </div>

          <!-- Submit button -->
          <div class="d-grid">
            <%= f.submit "Update", class: "btn btn-dark btn-lg shadow-sm" %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- 取消账户部分 -->
    <h3 class="text-danger text-center mt-4 fw-bold">Cancel my account</h3>
    <div class="text-center">
      <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger shadow-sm btn-lg" %>
    </div>

    <!-- 返回按钮 -->
    <div class="text-center mt-3">
      <%= link_to "Back", :back, class: "btn btn-secondary btn-lg shadow-sm" %>
    </div>
  </div>
</div>
